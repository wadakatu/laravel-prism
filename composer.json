{
    "name": "laravel-prism/laravel-prism",
    "description": "Zero-annotation API documentation generator for Laravel",
    "type": "library",
    "keywords": ["laravel", "api", "documentation", "openapi", "swagger"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "nikic/php-parser": "^5.5",
        "react/event-loop": "^1.3",
        "react/socket": "^1.12",
        "cboden/ratchet": "^0.4",
        "symfony/finder": "^6.0|^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0",
        "laravel/pint": "^1.23",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "LaravelPrism\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelPrism\\Tests\\": "tests/",
            "Tests\\Unit\\Analyzers\\Fixtures\\": "tests/Unit/Analyzers/Fixtures/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelPrism\\PrismServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint --test",
        "format:fix": "vendor/bin/pint",
        "analyze": "vendor/bin/phpstan analyse"
    },
    "scripts-descriptions": {
        "test": "Run the tests",
        "test-coverage": "Run the tests with coverage",
        "format": "Check the code style",
        "format:fix": "Format the code using Laravel Pint",
        "analyze": "Analyse the code using PHPStan"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
