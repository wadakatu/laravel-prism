{
    "name": "laravel-prism/laravel-prism",
    "description": "Zero-annotation API documentation generator for Laravel",
    "type": "library",
    "keywords": ["laravel", "api", "documentation", "openapi", "swagger"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0",
        "laravel/pint": "^1.23",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "LaravelPrism\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelPrism\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelPrism\\PrismServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse",
        "check-style": "vendor/bin/pint --test",
        "fix-style": "vendor/bin/pint"
    },
    "scripts-descriptions": {
        "test": "Run the tests",
        "test-coverage": "Run the tests with coverage",
        "format": "Format the code using Laravel Pint",
        "analyse": "Analyse the code using PHPStan",
        "check-style": "Check the code style",
        "fix-style": "Fix the code style"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
